{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "prefer-arrow-callback": "off",
        "func-names": "off",
        "no-shadow": "off",
        "no-param-reassign": "off",
        "indent": [
            "error",
            4
        ]
    }
}